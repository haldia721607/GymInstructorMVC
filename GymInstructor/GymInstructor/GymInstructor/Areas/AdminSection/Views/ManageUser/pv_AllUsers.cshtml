@model List<BOL.UserDetails>
<table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
        <tr>
            <th>
                <p>Block-All</p>
                @Html.CheckBox("BlockAll")
            </th>
            <th>
                <p>Delete-All</p>
                @Html.CheckBox("DeleteAll")
            </th>
            <th>@Html.ActionLink("Name", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Name" })</th>
            <th>@Html.ActionLink("Email", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Email" })</th>
            <th>@Html.ActionLink("Gender", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Gender" })</th>
            <th>@Html.ActionLink("Phone", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Phone" })</th>
            <th>@Html.ActionLink("Status", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SorrtBy = "Status" })</th>
            <th>@Html.ActionLink("Is Block", "AllUsers", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "IsBlock" })</th>
            <th>Block</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="gradeX">
                <td>
                    @Html.CheckBox(item.UserId.ToString(), item.IsBlockByAdmin, new { @class = "ckb", Id = item.UserId })
                </td>
                <td>
                    @Html.CheckBox(item.UserId.ToString(), false, new { @class = "dkb", Id = item.UserId })
                </td>
                <td>
                    @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(model => item.IsBlock)
                </td>
                <td>
                    <button class="btnBlock btn btn-primary btn-sm" id="@item.UserId" name="btnBlock" value="@item.UserId" type="submit">@(item.IsBlockByAdmin==false?"Block":"Un-Block")</button>
                </td>
                <td>
                    <button class="btnEdit btn btn-primary btn-sm" id="@item.UserId" name="btnEdit" value="@item.UserId" type="submit" >Edit</button>
                </td>
                <td>
                    <button class="btnDelete btn btn-primary btn-sm" id="@item.UserId" name="btnDelete" value="@item.UserId" type="submit" style="background-color: #d0091c;">Delete</button>
                </td>
            </tr>
        }
    </tbody>
